import time
import msvcrt

exercise_number = 1
exercises = (
    "–ì–∏—Ä—è –≤–æ–∫—Ä—É–≥ —Å–µ–±—è 10 —Ä–∞–∑ –≤ –∫–∞–∂–¥—É—é —Å—Ç–æ—Ä–æ–Ω—É",
    "–ì–∏—Ä—è –≤–æ–∫—Ä—É–≥ –≥–æ–ª–æ–≤—ã 10 —Ä–∞–∑ –≤ –∫–∞–∂–¥—É—é —Å—Ç–æ—Ä–æ–Ω—É",
    "–ì—É–¥ –º–æ—Ä–Ω–∏–Ω–≥ 10 —Ä–∞–∑",
    "–ú–µ–ª—å–Ω–∏—Ü–∞ 5 —Ä–∞–∑ –∫–∞–∂–¥–∞—è —Ä—É–∫–∞",
    "–ú–∞—Ö –≥–∏—Ä–µ–π 10 —Ä–∞–∑",
    "–ü—Ä–æ—Ç—è–∂–∫–∞ –≥–∏—Ä–∏ 10 —Ä–∞–∑ –∫–∞–∂–¥–æ–π —Ä—É–∫–æ–π",
    "–†—ã–≤–æ–∫ 10 —Ä–∞–∑ –∫–∞–∂–¥–æ–π —Ä—É–∫–æ–π",
    "–í–∑—è—Ç–∏–µ + —Ç–æ–ª—á–æ–∫ (–¥–ª–∏–Ω–Ω—ã–π —Ü–∏–∫–ª) 10 —Ä–∞–∑ –∫–∞–∂–¥–æ–π —Ä—É–∫–æ–π",
    "–í—ã–±—Ä–æ—Å –≥–∏—Ä–∏ —Å –ø–æ–≤–æ—Ä–æ—Ç–æ–º 10 —Ä–∞–∑ –∫–∞–∂–¥–æ–π —Ä—É–∫–æ–π",
    "–¢—Ä–∞—Å—Ç–µ—Ä—ã 10 —Ä–∞–∑ –∫–∞–∂–¥–æ–π —Ä—É–∫–æ–π",
    "–ö–æ—Å—ã–µ –≤—ã–ø–∞–¥—ã 10 —Ä–∞–∑ –≤ –∫–∞–∂–¥—É—é —Å—Ç–æ—Ä–æ–Ω—É",
    "–í—ã–ø–∞–¥—ã –Ω–∞–∑–∞–¥ —Å –∂–∏–º–æ–º 10 —Ä–∞–∑ –∫–∞–∂–¥–æ–π —Ä—É–∫–æ–π",
    "–í—ã–ø–∞–¥ –Ω–∞–∑–∞–¥ —Å –∂–∏–º–æ–º 10 —Ä–∞–∑ –Ω–∞ –∫–∞–∂–¥—É—é —Ä—É–∫—É",
    "–ü—É–ª–æ–≤–µ—Ä —Å –ø–æ–¥—ä—ë–º–æ–º 10 —Ä–∞–∑",
    "–¢—É—Ä–µ—Ü–∫–∏–π –ø–æ–¥—ä—ë–º 5 —Ä–∞–∑ –∫–∞–∂–¥–æ–π —Ä—É–∫–æ–π",
    "–¢—è–≥–∏ –≥–∏—Ä–∏ –∫ –ø–æ—è—Å—É –≤ –Ω–∞–∫–ª–æ–Ω–µ 10 —Ä–∞–∑ –∫–∞–∂–¥–æ–π —Ä—É–∫–æ–π",
    "–ü–æ–¥—ä—ë–º –∫–æ—Ä–ø—É—Å–∞ —Å –ø–æ–¥—ä—ë–º–æ–º –≥–∏—Ä–∏ 10 —Ä–∞–∑",
    "–°–≤–∏–Ω–≥–∏ 10 —Ä–∞–∑ –Ω–∞ –∫–∞–∂–¥—É—é —Å—Ç–æ—Ä–æ–Ω—É",
    "–ê–ª–º–∞–∑–Ω—ã–µ –æ—Ç–∂–∏–º–∞–Ω–∏—è 10 —Ä–∞–∑"
)


def print_exercise(exercise_number, exercises):
    print(f"–£–ø—Ä–∞–∂–Ω–µ–Ω–∏–µ {exercise_number} –∏–∑ 19")
    print(exercises[exercise_number - 1])


print("–ö–æ–º–ø–ª–µ–∫—Å 300")

print_exercise(exercise_number, exercises)

start = time.time()

try:
    while True:
        elapsed = time.time() - start
        hours = int(elapsed // 3600)
        minutes = int((elapsed % 3600) // 60)
        seconds = int(elapsed % 60)

        # –ü—Ä–æ–≤–µ—Ä—è–µ–º –Ω–∞–∂–∞—Ç–∏–µ –∫–ª–∞–≤–∏—à–∏ (–Ω–µ–±–ª–æ–∫–∏—Ä—É—é—â–∞—è –ø—Ä–æ–≤–µ—Ä–∫–∞)
        if msvcrt.kbhit():
            key = msvcrt.getch()
            if key == b' ':  # –ü—Ä–æ–±–µ–ª
                if exercise_number < 19:
                    exercise_number += 1
                    print()
                    print("-" * 30)
                    print_exercise(exercise_number, exercises)
                else:
                    print()
                    print("-" * 30)
                    print(f"–ö–æ–º–ø–ª–µ–∫—Å –∑–∞–≤–µ—Ä—à–µ–Ω. –í—Ä–µ–º—è –≤—ã–ø–æ–ª–Ω–µ–Ω–∏—è {hours:02d}:{minutes:02d}:{seconds:02d}")
                    break
        output = f"\r üïí –í—Ä–µ–º—è –≤—ã–ø–æ–ª–Ω–µ–Ω–∏—è: {hours:02d}:{minutes:02d}:{seconds:02d}"

        print(output, end="", flush=True)
        time.sleep(1)

except KeyboardInterrupt:
    print("\n\n–í—ã–ø–æ–ª–Ω–µ–Ω–∏–µ –ø—Ä–µ–∫—Ä–∞—à–µ–Ω–æ!")
